{
    "manifest_version": 3,
    "name": "Time Tracker",
    "version": "3.0",
    "description": "Track browsing time, set limits, and block distracting sites",
    "permissions": [
      "tabs",
      "storage",
      "alarms",
      "webNavigation",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "web_accessible_resources": [{
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }